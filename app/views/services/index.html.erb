<section class="section section-light">
  <div class="container">
    <h1 class="section-title">Our Core Services</h1>
    <p class="section-subtitle">Comprehensive construction and property services delivered with our signature hands-on approach across South Australia and Victoria.</p>

    <div class="services-grid">
      <% @services.each do |service| %>
        <div class="service-card">
          <h2><%= service.name %></h2>
          <p><%= service.description %></p>
          <% if authenticated? %>
            <div class="service-card-actions">
              <%= link_to "Edit", edit_service_path(service), class: "edit-link" %>
              <%= link_to "Delete", service_path(service),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{service.name}?" },
                  class: "delete-link" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if authenticated? %>
      <div class="text-center">
        <%= link_to "+ Add New Service", new_service_path, class: "btn-gold" %>
      </div>
    <% end %>
  </div>
</section>

<section class="section section-navy">
  <div class="container text-center">
    <h2 style="color: white; margin: 0 0 14px;">Multi Trade Expertise</h2>
    <p style="color: rgba(255,255,255,0.8); max-width: 650px; margin: 0 auto;">
      Our comprehensive team handles all trades under one roof, providing seamless coordination and quality assurance across every aspect of your project.
    </p>
  </div>
</section>
