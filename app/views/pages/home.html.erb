<!-- About -->
<section class="section section-white">
  <div class="container text-center">
    <h2 class="section-title">Comprehensive Construction &amp; Property Services</h2>
    <p class="section-subtitle">From new commercial builds to 24/7 emergency maintenance, we handle all trades under one roof with proven project delivery and hands-on management.</p>
    <%= link_to "View Our Services &rarr;".html_safe, services_path, class: "btn-gold" %>
  </div>
</section>

<!-- Contact Form -->
<section class="contact-section" id="contact">
  <div class="contact-card">
    <h2>Get in Touch</h2>
    <p>Send us a message and we&rsquo;ll get back to you promptly.</p>

    <% if flash[:notice] %>
      <div class="flash-notice"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="flash-alert"><%= flash[:alert] %></div>
    <% end %>

    <%= form_with url: contact_path, method: :post do |f| %>
      <div class="form-group">
        <%= f.label :name, "Your Name" %>
        <%= f.text_field :name, required: true, placeholder: "John Smith" %>
      </div>
      <div class="form-group">
        <%= f.label :email, "Your Email" %>
        <%= f.email_field :email, required: true, placeholder: "john@example.com" %>
      </div>
      <div class="form-group">
        <%= f.label :message, "Message" %>
        <%= f.text_area :message, required: true, rows: 5, placeholder: "Tell us about your project..." %>
      </div>
      <%= f.submit "Send Message", class: "btn-navy" %>
    <% end %>
  </div>
</section>
